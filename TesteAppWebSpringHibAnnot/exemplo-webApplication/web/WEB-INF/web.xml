<?xml version="1.0" encoding="ISO-8859-1"?>


<!DOCTYPE web-app PUBLIC
	"-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
	"http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
	
	<display-name>Web Teste Spring</display-name>

	<description>Exemplo de aplicação web Spring</description>

	<!--
		Propriedade chave do sistema que permite especificar o diretório 
		raiz da aplicação web.
		Utilizado por WebAppRootListener ou Log4jConfigListener.
	-->
	<context-param>
		<param-name>webAppRootKey</param-name>
		<param-value>webtest.root</param-value>
	</context-param>
	
	<!--
		Carrega os arquivos de configuração do contexto do Spring;
		Local do arquivo XML que define o contexto raiz da aplicação;
	    Aplicado por ContextLoaderServlet.
	-->
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			/WEB-INF/applicationContext-jdbc.xml,
			/WEB-INF/applicationContext-beans.xml,
			/WEB-INF/applicationContext-transaction.xml</param-value>
	</context-param>
	
	<!--
	    Local do arquivo de configuração do Log4J.
	    Aplicado em Log4jConfigListener.
	  -->
	<context-param>
		<param-name>log4jConfigLocation</param-name>
		<param-value>/WEB-INF/log4j.properties</param-value>
	</context-param>

	<!--
	  - Configures Log4J for this web app.
	  - As this context specifies a context-param "log4jConfigLocation", its file path
	  - is used to load the Log4J configuration, including periodic refresh checks.
	  -
	  - Would fall back to default Log4J initialization (non-refreshing) if no special
	  - context-params are given.
	  -
	  - Exports a "web app root key", i.e. a system property that specifies the root
	  - directory of this web app, for usage in log file paths.
	  - This web app specifies "petclinic.root" (see log4j.properties file).
	  -->
	<!-- Retirar de comentário se usar no JBoss -->
	
	<listener>
		<listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
	</listener>
	

	<!--
		 ==================================================================================
		 Carrega o contexto raiz desta aplicação web ao iniciar o container.
		 Por padrão carrega de "/WEB-INF/applicationContext.xml".
		 ==================================================================================
		
		 Warning: This listener should be registered after Log4jConfigListener
		 in web.xml (this file), if the latter is used.
		 
		 Read more in: 
		 http://www.springframework.org/docs/api/org/springframework/web/context/ContextLoaderListener.html
		
		 Loads the root application context of this web app at startup,
		 by default from "/WEB-INF/applicationContext.xml".
		 Use WebApplicationContextUtils.getWebApplicationContext(servletContext)
		 to access it anywhere in the web application, outside of the framework.

		 The root context is the parent of all servlet-specific contexts.
		 This means that its beans are automatically available in these child contexts,
		 both for getBean(name) calls and (external) bean references.
		 ==================================================================================
	-->
	<listener>
		<listener-class>
			org.springframework.web.context.ContextLoaderListener
		</listener-class>
	</listener>
	
	<!-- 
		Inicio das declarações de filtros.
	-->
	<filter>
		<filter-name>authFilter</filter-name>
		<filter-class>br.com.hoepers.webtest.utils.RequestFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>authFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<!-- 
		Fim das declarações de filtros.
	-->
	
	<!-- 
		Inicio das declarações dos servlets.
	-->
	<servlet>
		<servlet-name>modulo1</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>modulo1</servlet-name>
		<url-pattern>/modulo1/*</url-pattern>
	</servlet-mapping>
	<!-- 
		Inicio das declarações dos servlets.
	-->
		
	<mime-mapping>
		<extension>css</extension>
		<mime-type>text/css</mime-type>
	</mime-mapping>
	
	<session-config>
		<session-timeout>10</session-timeout>
	</session-config>

	<!--
		Página default de entrada.
	-->
	<welcome-file-list>
		<welcome-file>/WEB-INF/jsp/welcome.jsp</welcome-file>
	</welcome-file-list>

	<!--
		Página default de erros (Mostra o stacktrace).
	-->
	<error-page>
		<exception-type>java.lang.Exception</exception-type>
		<location>/WEB-INF/jsp/errorPage.jsp</location>
	</error-page>
	
	<error-page>
		<error-code>404</error-code>
		<location>/WEB-INF/jsp/notfound.jsp</location>
	</error-page>
	
</web-app>